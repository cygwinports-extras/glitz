  /usr/lib/libglitz.a
  /usr/lib/libglitz.dll.a
  /usr/lib/libglitz.la
  /usr/lib/pkgconfig/glitz-glx.pc
  /usr/lib/pkgconfig/glitz.pc
  /usr/share/doc/Cygwin/glitz-0.4.4.README
